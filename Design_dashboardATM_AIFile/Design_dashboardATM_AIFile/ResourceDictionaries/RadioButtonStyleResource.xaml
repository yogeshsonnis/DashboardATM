<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:AttachedProperties="clr-namespace:Design_dashboardATM_AIFile.CommonControl">

    <Style x:Key="HomeTabRadioButtonStyle"
           TargetType="RadioButton">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="BorderBrush"
                Value="#FF202020" />
        <Setter Property="Foreground"
                Value="#FF58595B" />
        <Setter Property="FontSize"
                Value="13" />
        <Setter Property="BorderThickness"
                Value="0" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Grid x:Name="templateRoot"
                          SnapsToDevicePixels="True">

                        <Path x:Name="path"
                              Data="F1M0.25,0.25L51.25,0.25C51.25,0.25 53.625,-0.5 56.5,7.25 59.635,15.701 63.25,24.251 69.5,24.251L0.25,24.251z"
                              Fill="#FFBCBEC0"
                              Stretch="UniformToFill"
                              Stroke="#FF6D6E71"
                              StrokeThickness="0.8" />

                        <Grid HorizontalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Path Data="{TemplateBinding AttachedProperties:AdditionalAttachedProperties.PathData}"
                                  Fill="#FF475654"
                                  Width="15.417"
                                  Height="12.334"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center" />
                            <TextBlock HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Text="{TemplateBinding Content}"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"
                                       Grid.Column="1" />
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked"
                                 Value="true">
                            <Setter Property="Fill"
                                    Value="#FFE6E7E8"
                                    TargetName="path" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

